<h1><%= @idea.title %></h1>

<p><%= @idea.body %></p>

<div>

      <%= link_to "Edit", 
      edit_idea_path(@idea.id), 
      class: "btn btn-sm btn-outline-primary" %>

      <%= link_to "Delete", 
        idea_path(@idea.id), 
        method: :delete, data: { confirm: "Are you sure?" }, 
        class: "btn btn-sm btn-outline-primary" %>

</div>